<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"    
    xmlns:views="clr-namespace:App.Views"
    xmlns:local="clr-namespace:App"
    Shell.FlyoutBehavior="Disabled"
    Title="App">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <TabBar Route="MainTabs">
        <Tab Title="Sklep">
            <ShellContent Route="MainPage" ContentTemplate="{DataTemplate views:MainPage}"/>
        </Tab>

        <Tab Title="Koszyk">
            <ShellContent Route="ShoppingCartPage" ContentTemplate="{DataTemplate views:ShoppingCartPage}"/>
        </Tab>

        <Tab Title="Konto">
            <ShellContent Route="AccountPage" ContentTemplate="{DataTemplate views:AccountPage}"/>
        </Tab>
    </TabBar>
</Shell>
