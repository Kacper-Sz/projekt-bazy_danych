<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="App.Views.Popups.ProductPopup">

    <Frame Padding="20" BackgroundColor="White" CornerRadius="20">
        <ScrollView HeightRequest="450" WidthRequest="300">
            <VerticalStackLayout Spacing="15">
                <Label Text="{Binding ProductName}" FontSize="Large" FontAttributes="Bold" TextColor="#333" HorizontalOptions="Center"/>
                <Image Source="{Binding ProductImageUrl}" HeightRequest="250" Aspect="AspectFill" HorizontalOptions="Center"/>
                <Label Text="{Binding Manufacturer, StringFormat='Producent: {0}'}" FontSize="Medium" TextColor="#333"/>
                <Label Text="{Binding Category, StringFormat='Kategoria: {0}'}" FontSize="Medium" TextColor="#333"/>
                <Label Text="{Binding Price, StringFormat='Cena: {0:C}'}" FontSize="Medium" TextColor="Green"/>
                <Label Text="{Binding Stock, StringFormat='Dostępność: {0}'}" FontSize="Medium" TextColor="#333"/>

                <Label Text="Specyfikacja:" FontAttributes="Bold" TextColor="#333"/>
                <StackLayout BindableLayout.ItemsSource="{Binding SpecsList}" Spacing="2">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding}" FontSize="Small" TextColor="#555"/>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
                <Label Text="{Binding Description}" FontSize="Small" TextColor="#333"/>

                <Button Text="Zamknij" Clicked="ClosePopup" BackgroundColor="#5847EF" TextColor="White" CornerRadius="15"/>
            </VerticalStackLayout>
        </ScrollView>
    </Frame>

</toolkit:Popup>
