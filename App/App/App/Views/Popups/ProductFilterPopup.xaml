<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="App.Views.Popups.ProductFilterPopup"
               Size="400,600">
  <ScrollView>
    <VerticalStackLayout Padding="20" Spacing="15">
      <Label Text="Filtry produktów" 
             FontAttributes="Bold" 
             FontSize="20" 
             HorizontalOptions="Center"/>

      <Label Text="Szukaj po nazwie" FontSize="14" />
      <Entry x:Name="SearchEntry" 
             Placeholder="Wpisz nazwę produktu..." 
             ClearButtonVisibility="WhileEditing" />


      <Label Text="Kategoria" FontSize="14" />
      <Picker x:Name="CategoryPicker" 
              Title="-- Wybierz kategorię --" />


      <Label Text="Producent" FontSize="14" />
      <Picker x:Name="ManufacturerPicker" 
              Title="-- Wybierz producenta --" />


      <Label Text="Zakres cen" FontSize="14" />
      <HorizontalStackLayout Spacing="10">
        <Entry x:Name="MinPriceEntry" 
               Placeholder="Min" 
               Keyboard="Numeric" 
               HorizontalOptions="FillAndExpand" />
        <Label Text="—" VerticalOptions="Center" />
        <Entry x:Name="MaxPriceEntry" 
               Placeholder="Max" 
               Keyboard="Numeric" 
               HorizontalOptions="FillAndExpand" />
      </HorizontalStackLayout>


      <Label Text="Minimalny stan magazynowy" FontSize="14" />
      <Entry x:Name="MinStockEntry" 
             Keyboard="Numeric" 
             Placeholder="np. 5" />


      <Grid ColumnDefinitions="*,*" 
            ColumnSpacing="10" 
            Margin="0,20,0,0">
        <Button Text="Wyczyść" 
                Clicked="OnClearClicked"
                Grid.Column="0"
                BackgroundColor="LightGray"
                TextColor="Black" />
        <Button Text="Zastosuj" 
                Clicked="OnApplyClicked"
                Grid.Column="1" />
      </Grid>
    </VerticalStackLayout>
  </ScrollView>
</toolkit:Popup>