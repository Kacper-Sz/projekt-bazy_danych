<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:App.ViewModels"
             x:Class="App.Views.RegisterPage"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <viewModels:RegisterViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#265BF9"
                  Offset="0.0" />
            <GradientStop Color="#5847EF"
                  Offset="0.33" />
            <GradientStop Color="#7A12D8"
                  Offset="0.66" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="25">

            <VerticalStackLayout Padding="25">
                <Image Source="logo.png" HeightRequest="100"/>
                <Label Text="EShop" FontSize="Large" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="LightBlue" FontAttributes="Bold,Italic"/>
                <Label Text="Utwórz konto, aby kontynuować" FontSize="Medium" TextColor="#eee" HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <Frame BackgroundColor="White" CornerRadius="25" Padding="25">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Rejestracja" FontSize="Large" FontAttributes="Bold" TextColor="#333"/>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Imię" FontSize="Medium" TextColor="#666"/>
                        <Entry Text="{Binding FirstName}" Placeholder="Jan" Keyboard="Text"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Nazwisko" FontSize="Medium" TextColor="#666"/>
                        <Entry Text="{Binding LastName}" Placeholder="Kowalski" Keyboard="Text"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Email" FontSize="Medium" TextColor="#666"/>
                        <Entry Text="{Binding Email}" Placeholder="example@email.com" Keyboard="Email"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Hasło" FontSize="Medium" TextColor="#666"/>
                        <Entry Text="{Binding Password1}" Placeholder="**********" IsPassword="True" Keyboard="Text"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Powtórz hasło" FontSize="Medium" TextColor="#666"/>
                        <Entry Text="{Binding Password2}" Placeholder="**********" IsPassword="True" Keyboard="Text"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Telefon" FontSize="Medium" TextColor="#666"/>
                        <Entry Text="{Binding PhoneNumber}" Placeholder="+48 123 456 789" Keyboard="Telephone"/>
                    </VerticalStackLayout>

                    <Label Text="{Binding ErrorText}" TextColor="#d32F2F" FontSize="Medium" IsVisible="{Binding ErrorIsVisible}" HorizontalOptions="Center"/>

                    <Button Text="Zarejestruj się" Command="{Binding RegisterCommand}" BackgroundColor="#265BF9" TextColor="White" FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>