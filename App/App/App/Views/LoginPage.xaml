<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:App.ViewModels"
             x:Class="App.Views.LoginPage"
             Title="LoginPage"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <viewModels:LoginViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#265BF9"
                  Offset="0.0" />
            <GradientStop Color="#5847EF"
                  Offset="0.33" />
            <GradientStop Color="#7A12D8"
                  Offset="0.66" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="2*, 3*" Padding="15">
        <Grid Grid.Row="0" RowDefinitions="2*, *, *" Margin="15" RowSpacing="10">
            <Image Grid.Row="0" Source="logo.png"/>
            <Label Grid.Row="1" Text="Nazwa" FontSize="Large" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            <Label Grid.Row="2" Text="Opis" FontSize="Medium" HorizontalOptions="Center" VerticalOptions="Center"/>
        </Grid>

        <Border Grid.Row="1" BackgroundColor="#eeeeee" Margin="5, 15">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="40" />
            </Border.StrokeShape>
            <VerticalStackLayout Spacing="15" Padding="15">
                <Label Text="Zaloguj się" FontSize="Medium" TextColor="Black" HorizontalOptions="Center" Margin="15"/>

                <Label Text="Email" FontSize="Medium"/>
                <Entry Keyboard="Email" Text="{Binding Email}"/>

                <Label Text="Hasło" FontSize="Medium"/>
                <Entry Keyboard="Text" IsPassword="True" Text="{Binding Password}"/>

                <Label Text="{Binding IncorrectText}" TextColor="red" Margin="5, 0" IsVisible="{Binding IncorrectIsVisible}"/>

                <Button Text="Zaloguj się" BackgroundColor="#265BF9" Margin="10, 0" Command="{Binding LoginCommand}"/>

                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label Text="Nie masz konta?" VerticalOptions="Center"/>
                    <Button Text="Zarejestruj się" BackgroundColor="Transparent" TextColor="#265BF9" Padding="5" Command="{Binding RegisterCommand}"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>

    </Grid>

</ContentPage>