<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:App.ViewModels"
             x:Class="App.Views.LoginPage"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <viewModels:LoginViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#265BF9"
                  Offset="0.0" />
            <GradientStop Color="#5847EF"
                  Offset="0.33" />
            <GradientStop Color="#7A12D8"
                  Offset="0.66" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="auto, *" Padding="25">
        
        <VerticalStackLayout Padding="25">
            <Image Source="logo.png" HeightRequest="100"/>
            <Label Text="EShop" FontSize="Large" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="LightBlue" FontAttributes="Bold,Italic"/>
        </VerticalStackLayout>

        <Frame Grid.Row="1" BackgroundColor="White" CornerRadius="25" Padding="25">
            <VerticalStackLayout Spacing="20">
                <Label Text="Zaloguj się" FontSize="Medium" TextColor="#333" FontAttributes="Bold" HorizontalOptions="Center" Padding="15"/>

                <VerticalStackLayout Spacing="10">
                    <Label Text="Email" FontSize="Medium" TextColor="#666"/>
                    <Entry Placeholder="example@email.com" Keyboard="Email" Text="{Binding Email}"/>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="10">
                    <Label Text="Hasło" FontSize="Medium" TextColor="#666"/>
                    <Entry Placeholder="****************" Keyboard="Text" IsPassword="True" Text="{Binding Password}"/>
                </VerticalStackLayout>

                <Label Text="{Binding IncorrectText}" TextColor="#D32F2F" Margin="5, 0" IsVisible="{Binding IncorrectIsVisible}"/>

                <Button Text="Zaloguj się" BackgroundColor="#265BF9" FontAttributes="Bold" CornerRadius="15" Command="{Binding LoginCommand}"/>

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                    <Label Text="Nie masz konta?" VerticalOptions="Center" TextColor="#555"/>
                    <Button Text="Zarejestruj się" BackgroundColor="Transparent" TextColor="#265BF9" Padding="0" FontAttributes="Bold" Command="{Binding RegisterCommand}"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>

    </Grid>

</ContentPage>